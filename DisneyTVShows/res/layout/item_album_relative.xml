<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llIndex"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/v_relative_padding_nomal"
    android:paddingRight="@dimen/v_relative_padding_nomal"
    android:paddingTop="@dimen/v_relative_padding_nomal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/v_relative_padding_nomal"
        android:paddingLeft="@dimen/v_relative_padding_min"
        android:paddingRight="@dimen/v_relative_padding_min" >

        <RelativeLayout
            android:id="@+id/rlContainImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <com.kids.test11.customize.ImageAlbumDetailCustomize
                android:id="@+id/imgVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                 />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgVideo"
                android:layout_alignRight="@+id/imgVideo"
                android:layout_marginBottom="@dimen/padding_nomal_index_nomal"
                android:layout_marginRight="@dimen/padding_nomal_index_nomal"
                android:background="@drawable/bg_time_tv"
                android:padding="3dip"
                android:text="5:09"
                android:visibility="gone"
                android:textColor="#99ffffff" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvNameVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                 android:paddingLeft="@dimen/padding_nomal"
                android:paddingRight="@dimen/padding_nomal"
                android:text="Dad SAVES daughter at Knicks - Bulls game! (12/11/13)"
                android:textColor="@color/color_index"
                android:textSize="@dimen/text_size_max" />

            <TextView
                android:id="@+id/tvCountVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="@dimen/padding_nomal"
                android:paddingRight="@dimen/padding_nomal"
                android:paddingTop="3dip"
                android:singleLine="true"
                android:text="4.984 view"
                android:textColor="@color/color_text_light"
                android:textSize="@dimen/text_size_nomal" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/color_diver" />

</LinearLayout>